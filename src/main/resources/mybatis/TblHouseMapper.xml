<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kirarabbit.mapper.TblHouseMapper">


    <select id="getHouseInfoByPage" resultType="com.kirarabbit.entity.TblHouse">
        select * from tbl_house_info
        <where>
            1=1
            <!-- <if test="startTime != null and startTime != ''">-->
            <if test="location != null and location != ''">
                AND location = #{location}
            </if>
            <if test="houseTypeMore != null and houseTypeMore != ''">
                AND house_type &lt;= #{houseTypeMore}
            </if>
            <if test="houseTypeLess != null and houseTypeLess != ''">
                AND house_type &gt;= #{houseTypeLess}
            </if>
            <if test="moneyLess != null and moneyLess != ''">
                AND money &gt;= #{moneyLess}
            </if>
            <if test="moneyMore != null and moneyMore != ''">
                AND money &lt;= #{moneyMore}
            </if>
        </where>

    </select>
</mapper>