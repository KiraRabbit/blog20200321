<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kirarabbit.mapper.ArticleMapper">

    <resultMap type="com.kirarabbit.entity.Article" id="ArticleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="articleName" column="article_name" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="OTHER"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="classify" column="classify" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ArticleMap">
        select
          id, article_name, content, author, classify, create_time, modify_time
        from kiraBlog.article
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ArticleMap">
        select
          id, article_name, content, author, classify, create_time, modify_time
        from kiraBlog.article
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ArticleMap">
        select
        id, article_name, content, author, classify, create_time, modify_time
        from kiraBlog.article
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="articleName != null and articleName != ''">
                and article_name = #{articleName}
            </if>
            <if test="content != null">
                and content = #{content}
            </if>
            <if test="author != null and author != ''">
                and author = #{author}
            </if>
            <if test="classify != null and classify != ''">
                and classify = #{classify}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                and modify_time = #{modifyTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into kiraBlog.article(article_name, content, author, classify, create_time, modify_time)
        values (#{articleName}, #{content}, #{author}, #{classify}, #{createTime}, #{modifyTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update kiraBlog.article
        <set>
            <if test="articleName != null and articleName != ''">
                article_name = #{articleName},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="classify != null and classify != ''">
                classify = #{classify},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from kiraBlog.article where id = #{id}
    </delete>

</mapper>